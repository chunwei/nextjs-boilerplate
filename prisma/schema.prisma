generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(cuid())
  role      String   // 'user' 或 'assistant'
  content   String   @db.Text
  chatId    String   // 格式: userId:provider
  createdAt DateTime @default(now())

  @@index([chatId])
  @@map("messages")
  // @@schema("chat")
}